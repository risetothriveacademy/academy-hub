{
  "version": "1.0.0",
  "lastUpdated": "2025-11-06",
  "events": {
    "PageView": {
      "platforms": ["meta", "google"],
      "trigger": "page_load",
      "parameters": {
        "page_location": "window.location.href",
        "page_title": "document.title",
        "content_category": "dynamic"
      }
    },
    "ViewContent": {
      "platforms": ["meta"],
      "trigger": "scroll_to_details",
      "parameters": {
        "content_name": "course_title",
        "content_category": "Recovery Series",
        "content_ids": ["course_slug"],
        "content_type": "product",
        "value": "product_price",
        "currency": "USD"
      }
    },
    "InitiateCheckout": {
      "platforms": ["meta", "google"],
      "trigger": "enroll_button_click",
      "parameters": {
        "content_name": "course_title",
        "content_category": "Recovery Series",
        "content_ids": ["course_slug"],
        "value": "product_price",
        "currency": "USD",
        "num_items": 1
      }
    },
    "Purchase": {
      "platforms": ["meta", "google"],
      "trigger": "success_page_load",
      "parameters": {
        "content_name": "course_title",
        "content_category": "Recovery Series",
        "content_ids": ["course_slug"],
        "value": "product_price",
        "currency": "USD",
        "transaction_id": "stripe_payment_intent_id",
        "num_items": 1
      }
    },
    "AddToCart": {
      "platforms": ["google"],
      "trigger": "enroll_button_click",
      "parameters": {
        "items": [
          {
            "item_id": "course_slug",
            "item_name": "course_title",
            "item_category": "Recovery Series",
            "price": "product_price",
            "quantity": 1
          }
        ],
        "value": "product_price",
        "currency": "USD"
      }
    }
  },
